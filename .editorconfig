# https://github.com/kaisekidev/editorconfig
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.php]
indent_style = space
indent_size = 4

[{*.js,*.jsx,*.cjs,*.jsm,*.ts,*.tsx}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
