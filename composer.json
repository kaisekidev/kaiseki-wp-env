{
  "name": "kaiseki/wp-env",
  "type": "library",
  "description": "WordPress Environment Helper",
  "license": "MIT",
  "homepage": "https://github.com/kaisekidev/kaiseki-wp-env",
  "authors": [
    {
      "name": "Kaiseki",
      "email": "hello@kaiseki.dev",
      "homepage": "https://www.kaiseki.dev",
      "role": "Organization"
    },
    {
      "name": "David Mondok",
      "email": "david@woda.at",
      "homepage": "https://github.com/davidmondok",
      "role": "Developer"
    },
    {
      "name": "Wolfgang Schaefer",
      "email": "wolfgang@woda.at",
      "homepage": "https://github.com/wolfgangschaefer",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/kaisekidev/kaiseki-wp-env/issues",
    "source": "https://github.com/kaisekidev/kaiseki-wp-env"
  },
  "require": {
    "php": "^8.1",
    "psr/container": "^1.1 || ^2.0"
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.0",
    "kaiseki/php-coding-standard": "dev-master",
    "maglnet/composer-require-checker": "^3.5",
    "php-stubs/wordpress-stubs": "^6.2",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.2",
    "phpstan/phpstan-phpunit": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "roots/wordpress-core-installer": "*",
    "roots/wordpress-no-content": "@stable",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "thecodingmachine/phpstan-safe-rule": "^1.2"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "roots/wordpress-core-installer": true,
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": false,
      "infection/extension-installer": false
    },
    "process-timeout": 0
  },
  "autoload": {
    "psr-4": {
      "Kaiseki\\WordPress\\Environment\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kaiseki\\Test\\Functional\\WordPress\\Environment\\": "tests/functional",
      "Kaiseki\\Test\\Unit\\WordPress\\Environment\\": "tests/unit"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*"
      ]
    }
  ],
  "minimum-stability": "stable",
  "extra": {
    "wordpress-install-dir": "vendor/wordpress/wordpress",
    "installer-paths": {
      "vendor/wordpress/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "scripts": {
    "check": [
      "@check-deps",
      "@cs-check",
      "@phpstan"
    ],
    "check-deps": "composer-require-checker --config-file=require-checker.config.json",
    "cs-check": "php-cs-fixer fix --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes",
    "phpstan": "phpstan analyse --memory-limit 1G",
    "phpunit": "phpunit"
  }
}
